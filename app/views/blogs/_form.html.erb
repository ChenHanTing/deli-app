<%= form_for @blog || :blog, url: { action: action }, html: { class: "nifty_form" } do |f| %>
	<div class="card">
		<div class="card-body">
			<div class="form-group mb-3">
				<%= f.label :name, "名稱:", class: "col-md-4 control-label" %>
				<div class="col-md-8">
					<%= f.text_field :name, class: "form-control" %>
				</div>
			</div>
			
			<div class="form-group">
				<%= f.submit "送出", class: "btn btn-primary" %>
				<%= link_to "回首頁", blogs_path, class: "btn btn-warning" %>
			</div>
		</div>
	</div>
<% end %>